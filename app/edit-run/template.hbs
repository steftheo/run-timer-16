<h2 class="new__title">Edit Run</h2>
<form {{action editRun on="submit"}}>
  <ul class="form-inputs">
    {{input type="text" value=model.time class="form-input__boxes" placeholder="Run Time"}}
    {{input type="date" value=model.date class="form-input__boxes" placeholder="Race Date"}}
    {{input type="text" value=model.notes class="form-input__boxes" placeholder="Race Notes"}}
  </ul>

  <div class="form__buttons">
    {{#link-to 'run-detail' model._id}}
      <button class="form-button__cancel">Cancel</button>
      {{/link-to}}
      <button class="form-button__submit">Submit</button>
  </div>
</form>
